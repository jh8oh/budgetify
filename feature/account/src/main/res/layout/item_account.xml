<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_account_height"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/account_name"
        style="?textAppearanceBodyLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_account_name_margin_start"
        android:layout_marginEnd="@dimen/item_account_name_margin_end"
        app:layout_constraintBottom_toTopOf="@id/account_institution"
        app:layout_constraintEnd_toStartOf="@id/account_currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Chequing" />

    <TextView
        android:id="@+id/account_institution"
        style="?textAppearanceBodySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_account_institution_margin_top"
        android:layout_marginEnd="@dimen/item_account_institution_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/account_currency"
        app:layout_constraintStart_toStartOf="@id/account_name"
        app:layout_constraintTop_toBottomOf="@id/account_name"
        tools:text="CIBC" />

    <TextView
        android:id="@+id/account_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_account_currency_margin_end"
        app:layout_constraintBottom_toBottomOf="@id/account_balance"
        app:layout_constraintEnd_toStartOf="@id/account_balance"
        app:layout_constraintTop_toTopOf="@id/account_balance"
        tools:text="CA$" />

    <TextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_account_balance_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1300" />

</androidx.constraintlayout.widget.ConstraintLayout>