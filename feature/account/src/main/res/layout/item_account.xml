<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_account_height"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/account_color"
        android:layout_width="@dimen/item_account_color_size"
        android:layout_height="@dimen/item_account_color_size"
        android:src="@drawable/background_circle"
        android:importantForAccessibility="no"
        android:layout_marginHorizontal="@dimen/item_account_color_margin_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/maroon_700" />

    <TextView
        android:id="@+id/account_name"
        style="@style/TextAppearance.Budgetify.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_account_name_margin_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/account_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chequing" />

    <TextView
        android:id="@+id/account_balance"
        style="@style/TextAppearance.Budgetify.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_account_current_amount_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CA$ 1300" />

</androidx.constraintlayout.widget.ConstraintLayout>