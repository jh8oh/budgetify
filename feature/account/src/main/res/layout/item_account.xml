<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_account_height"
    android:background="?selectableItemBackground"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/account_name"
        style="@style/TextAppearance.Budgetify.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_account_name_margin_start"
        app:layout_constraintBottom_toTopOf="@id/account_institution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Chequing" />

    <TextView
        android:id="@+id/account_institution"
        style="@style/TextAppearance.Budgetify.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_account_institution_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/account_name"
        app:layout_constraintTop_toBottomOf="@id/account_name"
        tools:text="CIBC" />

    <TextView
        android:id="@+id/account_balance"
        style="@style/TextAppearance.Budgetify.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_account_current_amount_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CA$ 1300" />

</androidx.constraintlayout.widget.ConstraintLayout>