<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_account_container"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/widget_account_container_padding_horizontal"
    android:paddingVertical="@dimen/widget_account_container_padding_vertical">

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="@dimen/widget_account_container_icon_size"
        android:layout_height="@dimen/widget_account_container_icon_size"
        android:layout_marginEnd="@dimen/widget_account_container_icon_margin_end"
        android:importantForAccessibility="no"
        app:tint="?colorOnBackground"
        tools:src="@drawable/ic_account_cash" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Chequing" />

</LinearLayout>