<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_category_height"
    android:background="?selectableItemBackground"
    android:paddingHorizontal="@dimen/item_category_padding_horizontal">

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="@dimen/item_category_icon_size"
        android:layout_height="@dimen/item_category_icon_size"
        android:contentDescription="@string/category_icon_content_description"
        android:padding="@dimen/item_category_icon_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/cyan"
        tools:src="@drawable/ic_exp_home" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_category_title_margin_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/category_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Home" />

</androidx.constraintlayout.widget.ConstraintLayout>