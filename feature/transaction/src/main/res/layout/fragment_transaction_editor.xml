<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <dev.ohjiho.budgetify.theme.component.moneydisplay.MoneyDisplay
        android:id="@+id/display"
        style="@style/MoneyDisplay"
        android:layout_marginBottom="@dimen/fragment_transaction_editor_money_display_margin_bottom"
        app:layout_constraintBottom_toTopOf="@id/keypad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <dev.ohjiho.budgetify.theme.component.keypad.Keypad
        android:id="@+id/keypad"
        style="@style/Keypad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display" />

</androidx.constraintlayout.widget.ConstraintLayout>