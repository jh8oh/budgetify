<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/dialog_add_transaction_drawable_padding"
        android:gravity="start|center"
        android:paddingHorizontal="@dimen/dialog_add_transaction_padding_horizontal"
        android:paddingVertical="@dimen/dialog_add_transaction_padding_vertical"
        android:text="@string/dialog_add_transaction_expense"
        app:drawableStartCompat="@drawable/ic_arrow_out"
        app:drawableTint="?colorOnBackground" />

    <TextView
        android:id="@+id/new_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/dialog_add_transaction_drawable_padding"
        android:gravity="start|center"
        android:paddingHorizontal="@dimen/dialog_add_transaction_padding_horizontal"
        android:paddingVertical="@dimen/dialog_add_transaction_padding_vertical"
        android:text="@string/dialog_add_transaction_income"
        app:drawableStartCompat="@drawable/ic_arrow_in"
        app:drawableTint="?colorOnBackground" />

    <TextView
        android:id="@+id/new_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/dialog_add_transaction_drawable_padding"
        android:gravity="start|center"
        android:paddingHorizontal="@dimen/dialog_add_transaction_padding_horizontal"
        android:paddingVertical="@dimen/dialog_add_transaction_padding_vertical"
        android:text="@string/dialog_add_transaction_transfer"
        app:drawableStartCompat="@drawable/cat_transfer"
        app:drawableTint="?colorOnBackground" />

</LinearLayout>