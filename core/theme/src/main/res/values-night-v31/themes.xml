<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Budgetify" parent="Theme.Material3.DayNight">
        <!-- Splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/app_icon_animated</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/teal_700</item>

        <!-- Colors -->
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/black_850</item>
        <item name="colorOnBackground">@color/black_100</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/black_800</item>
        <item name="colorOnSurface">@color/black_100</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <!-- Outline color -->
        <item name="colorOutline">@color/black_500</item>

        <!-- Text -->
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Budgetify.ActionBar.Title</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Budgetify.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Budgetify.Headline</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Budgetify.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Budgetify.Body</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Budgetify.BodySmall</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Budgetify.Label</item>
        <item name="textAppearanceButton">@style/TextAppearance.Budgetify.Button</item>

        <item name="android:textViewStyle">?textAppearanceBodyMedium</item>
    </style>
</resources>