<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_money_display"
    android:paddingHorizontal="@dimen/widget_money_display_padding_horizontal"
    android:paddingVertical="@dimen/widget_money_display_padding_vertical">

    <TextView
        android:id="@+id/currency"
        style="?textAppearanceBodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_money_display_currency_margin_end"
        android:textSize="@dimen/widget_money_display_currency_text_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/amount"
        app:layout_constraintEnd_toStartOf="@id/amount"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="CAD" />

    <dev.ohjiho.budgetify.theme.widget.BaselineLastLineTextView
        android:id="@+id/amount"
        style="@style/TextAppearance.Budgetify.HeadlineExtraLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/decimal"
        app:layout_constraintStart_toEndOf="@id/currency"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1132" />

    <TextView
        android:id="@+id/decimal"
        style="?textAppearanceHeadlineLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/widget_money_display_decimal_amount_hint"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBaseline_toBaselineOf="@id/amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/amount"
        tools:text=".21" />

</androidx.constraintlayout.widget.ConstraintLayout>