<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_money_display"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/widget_money_display_padding_vertical">

    <TextView
        android:id="@+id/currency"
        style="?textAppearanceBodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_money_display_currency_margin_end"
        tools:text="CAD" />

    <TextView
        android:id="@+id/amount"
        style="@style/TextAppearance.Budgetify.HeadlineExtraLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1132" />

    <TextView
        android:id="@+id/decimal"
        style="?textAppearanceHeadlineLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/component_money_display_decimal_amount_hint"
        android:visibility="gone"
        tools:text=".21" />

</LinearLayout>