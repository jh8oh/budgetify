<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        style="?textAppearanceLabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_repeat_display_padding_horizontal"
        android:layout_marginTop="@dimen/widget_repeat_display_padding_vertical"
        android:text="@string/widget_repeat_display_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_repeat_display_padding_horizontal"
        android:layout_marginTop="@dimen/widget_repeat_display_icon_margin_top"
        android:layout_marginBottom="@dimen/widget_repeat_display_padding_vertical"
        android:contentDescription="@string/widget_repeat_display_content_description"
        android:src="@drawable/ic_repeat"
        app:layout_constraintBottom_toBottomOf="@id/click_area"
        app:layout_constraintStart_toStartOf="@id/click_area"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:tint="?colorOnBackground" />

    <TextView
        android:id="@+id/repeat_text"
        style="?textAppearanceBodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/widget_repeat_display_text_margin_vertical"
        android:layout_marginStart="@dimen/widget_repeat_display_text_margin_start"
        android:layout_marginEnd="@dimen/widget_repeat_display_padding_horizontal"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/click_area"
        app:layout_constraintEnd_toEndOf="@id/click_area"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/click_area"
        tools:text="Weekly on Mon, Fri" />

    <View
        android:id="@+id/click_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="@dimen/widget_repeat_display_content_min_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>